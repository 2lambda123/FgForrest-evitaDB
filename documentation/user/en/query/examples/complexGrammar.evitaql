query(
    collection("Product"),
    filterBy(
       and(
          entityPrimaryKeyInSet(1, 2, 3),
          attributeEquals("status", "ACTIVE")
       )
    ),
    orderBy(
        attributeNatural("code", ASC),
        attributeNatural("priority", DESC)
    ),
    require(
        entityFetch(
			attributeContentAll(), priceContentAll()
		),
        facetSummary()
    )
)