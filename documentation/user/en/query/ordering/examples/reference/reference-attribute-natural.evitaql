query(
    collection('Product'),
    filterBy(
        referenceHaving(
            'brand',
            entityHaving(
                attributeEquals('code','sale')
            )
        )
    ),
    orderBy(
        referenceProperty(
            'groups',
            attributeNatural('orderInGroup', ASC)
        )
    ),
    require(
        entityFetch(
            attributeContent('code'),
            referenceContentWithAttributes(
                'groups',
                attributeContent('orderInGroup')
            )
        )
    )
)