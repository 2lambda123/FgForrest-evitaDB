query(    
    collection('Product'),    
    filterBy(
        hierarchyWithin(
            'categories',
            attributeEquals('code', 'audio')
        )
    ),
    require(
        hierarchyOfSelf(            
            parents(
                'parent',
                entityFetch(attributeContent(code)),
                stopAt(distance(1)),
                statistics(
                    CHILDREN_COUNT,
                    QUERIED_ENTITY_COUNT
                )
            )
        )
    )
)